<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<jdbc:embedded-database id="embeddedDataSource">
		<jdbc:script location="classpath:/zrq/com/jdbc/example5/schema.sql" />
		<jdbc:script location="classpath:/zrq/com/jdbc/example5/data.sql" />
	</jdbc:embedded-database>

	<!-- Definition for studentJDBCTemplate bean -->
	<bean id="studentJDBCTemplate" class="zrq.com.jdbc.example5.StudentJDBCTemplate">
		<property name="dataSource" ref="embeddedDataSource" />
	</bean>

</beans>


